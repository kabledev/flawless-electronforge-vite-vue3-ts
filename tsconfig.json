{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": ".vite/tmp",
    "resolveJsonModule": true,
    "jsx": "preserve", // Vue 3 JSX
    "strict": true, // type checking
    "paths": {
      "@/*": ["src/*"] // Alias
    }
  },
  "include": ["src/**/*", "src/**/*.vue", "forge.env.d.ts", "types/**/*"],
  "exclude": ["node_modules", "dist", "out", ".vite"]
}
